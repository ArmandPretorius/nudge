<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/cb_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorCardBackground"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="15dp" android:layout_marginTop="0dp">

        <!-- one child layout containing other layouts or views -->

        <android.support.v7.widget.CardView
                android:id="@+id/checked_indication_background"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp"
                android:layout_width="20dp"
                android:animateLayoutChanges="true">
        <TextView
                android:id="@+id/cb_item_unchecked"
                android:text="Hi there"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDark" android:textSize="24sp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="40dp" android:layout_marginBottom="20dp"/>
        </android.support.v7.widget.CardView>
        <TextView
                android:id="@+id/cb_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextLight"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="20dp"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <ImageView
                android:id="@+id/check_mark"
                android:layout_width="23dp"
                android:layout_height="14dp"
                app:srcCompat="@drawable/ic_nudges_logo"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:srcCompat="@drawable/ic_nudges_logo"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:animateLayoutChanges="true"/>
        </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
